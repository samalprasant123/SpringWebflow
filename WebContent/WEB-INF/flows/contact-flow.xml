<?xml version="1.0" encoding="UTF-8"?>
<flow xmlns="http://www.springframework.org/schema/webflow"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/webflow
        http://www.springframework.org/schema/webflow/spring-webflow-2.0.xsd">
        
    <var name="message" class="com.prasant.spring.mvc.model.Message" ></var>

	<view-state id="showContactForm" model="message">
		<on-entry>
			<set name="requestScope.fromUser" value="userService.getUser(currentUser?.name)"></set>
			<set name="flowScope.fromName" value="fromUser?.name"></set>
			<set name="flowScope.fromEmail" value="fromUser?.email"></set>
			<set name="message.username" value="requestParameters.uid"></set>
		</on-entry>
		<transition on="sendmess" to="sendMessage"></transition>
	</view-state>
	
	<action-state id="sendMessage">
		<evaluate expression="userService.sendMessage(message)"></evaluate>
		<transition to="messageSent"></transition>
	</action-state>

	<view-state id="messageSent">
	</view-state>
	
</flow>